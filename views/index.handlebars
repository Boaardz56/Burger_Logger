<h1 class="text-center burgerTitle">Eat-Da-Burger!
  <img src="../public/assets/img/download.jpg">
</h1>
<!--burgers available-->
<div class="container">
  <div class="row">
    <div class="col-md-6 burgerPage">
      <h4 class="submitFont">Ready to Eat!</h4>
      <div id="burgersReady">
        {{#each burgers}}
        {{#unless devoured}}
        <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
          <div class="input-group">
            <li class="form-control">{{burger_name}}</li>
             <span class="input-group-btn">
              <button type="submit" class="btn btn-default btn-danger devourButton">Devour it!</button>
             </span>
          </div>
        </form>
    
    {{/unless}}
    {{/each}}
    </div>
  </div>


<!--created burgers-->
  <div class="boxDiv">
    <form class="create-form" action="burgers/insertOne" method="POST">
      <div class="form-group">
        <textarea placeholder="Enter name of burger you'd like to eat!" id="burgerName" name="burger_name"></textarea>
        <br>
        <button type="submit" class="btn btn-lg btn-primary submitButton">Submit</button>
      </div>
    </form>
  </div>

<!--devoured burgers-->
  <div class="col-md-6 devouredComplete">
    <h4 class="submitFont">Devoured Already: </h4>
    <div id="devouredAlready">
      {{#each burgers}}
      {{#if this.devoured}}
      <div class="input-group">
        <li class="form-control">{{this.burger_name}}</li>
      </div>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>